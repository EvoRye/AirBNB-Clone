<h3>Find the perfect vacation home</h3>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#"></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <form class="form-inline ml-auto" action="<%= listings_path %>" method="GET">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search destinations">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">Search</button>
        </div>
      </div>
    </form>
  </div>
</nav>
<br>
<div>
  <div class='container'>
  <div class='row'>
    <% @listings.each do |listing| %>
      <div class='col-md-3'>
        <%= link_to listing_path(listing), class: "no-decoration" do %>
          <%= render "shared/card", listing: listing %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>
</div class='row'>
  <%= render "shared/footer" %>
</div>
