<h2>Booking Confirmation</h2>

  <div class='container'>
    <div class='row'>
      <% @bookings.each do |booking| %>
        <div class='col-md-3 mb-4'>
          <%= link_to booking_path(booking), class: "no-decoration" do %>
            <%= render "shared/booking", booking: booking %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
    <p><%= link_to "Back to listings..", root_path  %></p>
</div>




