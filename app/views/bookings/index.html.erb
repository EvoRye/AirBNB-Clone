<h2>My Bookings</h2>



<div class='container pt-5'>
  <div class='row'>
    <% @bookings.each do |booking| %>
      <div class="col-3">
        <div class="card-trip">
          <div class = "card-image">
            <img src="<%= booking.listing.image %>" style="width: 250px; height: 250px" />
          </div>
          <div class="card-trip-infos">
              <p><strong><%= booking.listing.title %></strong></p>
              <p>Start Date: <%= booking.start_date %></p>
              <p>End Date: <%= booking.end_date %></p>
          </div>
          <div class="card-trip-pricing">
            <h3>â‚¬<%= booking.listing.price %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
